<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="32dp"
    android:background="#3B346A">

    <ImageView
        android:id="@+id/imgHeader"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_alignParentTop="true"
        android:src="@drawable/profileavatar"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@id/imgHeader"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgStringRequest"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:clickable="true"
            android:src="@drawable/selector_string_request"/>

        <ImageView
            android:id="@+id/imgJsonRequest"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="16dp"
            android:clickable="true"
            android:src="@drawable/selector_json_request"/>

        <ImageView
            android:id="@+id/imgImageRequest"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_marginTop="16dp"
            android:clickable="true"
            android:src="@drawable/selector_image_request"/>

    </LinearLayout>

</RelativeLayout>